
@{
    ViewBag.Title = "SignUp";
}

<form class="modal-content" style=" background-color: #fefefe; margin: 5% auto 15% auto; border: 1px solid #888; width: 80%;">
    <div class="container">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <label for="email"><b>Email</b></label>
        <input type="text" style="width: 100%; padding: 15px; margin: 5px 0 22px 0;  display: inline-block; border: none; background: #f1f1f1;"placeholder="Enter Email" name="email" required>
        <br/>
        <label for="psw"><b>Password</b></label>
        <input type="password" style="width: 100%; padding: 15px; margin: 5px 0 22px 0;  display: inline-block; border: none; background: #f1f1f1;" placeholder="Enter Password" name="psw" required>
        <br/>
        <label for="psw-repeat"><b>Repeat Password</b></label>
        <input type="password" style="width: 100%; padding: 15px; margin: 5px 0 22px 0;  display: inline-block; border: none; background: #f1f1f1;" placeholder="Repeat Password" name="psw-repeat" required>
        <br />
        <label>
            <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
        </label>

      

        <div class="clearfix">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Sign Up", "Index", null, new { @class = "btn btn-primary" })

           
        </div>
    </div>
</form>
